# vim: set ft=sh:

export LC_ALL=en_US.UTF-8
export EDITOR="vim"
export DEBFULLNAME="Webber Wu"
export DEBEMAIL="chenshin0719@gmail.com"
export GREP_OPTIONS='--color=auto --mmap --exclude-dir=\.svn --exclude-dir=\.git --exclude=*\.swp'
export GREP_COLOR="1;33"

# unstaged (*) and staged (+)
#export GIT_PS1_SHOWDIRTYSTATE=1
# If something is stashed then a '$' will be shown next to the branch name.
export GIT_PS1_SHOWSTASHSTATE=1
# If there're untracked files, then a '%' will be shown next to the branch name.
#export GIT_PS1_SHOWUNTRACKEDFILES=1
# A "<" indicates you are behind, ">" indicates you are ahead, and "<>" indicates you have diverged.
export GIT_PS1_SHOWUPSTREAM="auto"

# PS1 color non-printable 要用 \e[0;33m \e]m wrap 起來
COLOR_USER='\e[0;37m'
COLOR_HOST='\e[0;33m'
COLOR_DICT='\e[1;34m'
COLOR_GIT='\e[1;32m'
GIT_BRANCH='$(__git_ps1 "(%s)")'
COLOR_ARROW='\e[0;37m'
COLOR_END='\e[m'
export PS1="$COLOR_USER\u$COLOR_END$COLOR_HOST@\H[\j]$COLOR_END $COLOR_DICT\w$COLOR_END$COLOR_GIT$GIT_BRANCH$COLOR_END $COLOR_ARROW» $COLOR_END"

export PATH="$HOME/bin:$PATH"
