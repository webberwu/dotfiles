# vim: set ft=sh:

case $(uname -s) in
    Linux)
        export GREP_OPTIONS='--color=auto --exclude-dir=\.git --exclude=*\.swp'
        ;;
    Darwin)
        export GREP_OPTIONS='--color=auto --exclude=\.git --exclude=*\.swp'
        ;;
    FreeBSD)
        export GREP_OPTIONS='--color=auto --exclude=\.git --exclude=*\.swp'
        ;;
esac

export LC_ALL=en_US.UTF-8
export EDITOR="vim"
export PAGER="less"
export GIT_PAGER="less"
export DEBFULLNAME="Webber Wu"
export DEBEMAIL="chenshin0719@gmail.com"
export GREP_COLOR="1;33"
export HISTTIMEFORMAT="%Y/%m/%d %T "

# unstaged (*) and staged (+)
#export GIT_PS1_SHOWDIRTYSTATE=1
# If something is stashed then a '$' will be shown next to the branch name.
export GIT_PS1_SHOWSTASHSTATE=1
# If there're untracked files, then a '%' will be shown next to the branch name.
#export GIT_PS1_SHOWUNTRACKEDFILES=1
# A "<" indicates you are behind, ">" indicates you are ahead, and "<>" indicates you have diverged.
export GIT_PS1_SHOWUPSTREAM="auto"

# PS1 color non-printable 要用 \[ \] wrap \033[0;33m，e.g. \[\033[0;33m\]
# CLI 指令過長沒正常斷行造成 overlap 時，可以檢查 wrap 是否正確
export PS1='\[\e[38;5;162m\]\u\[\033[0m\]@\[\e[38;5;129m\]\H[\j][\t] \[\e[38;5;208m\]\w\[\033[0m\]$(__git_ps1 "\[\e[38;5;112m\](%s)\[\033[0m\]") \[\033[1;30m\]»\[\033[0;37m\]»\[\033[1;37m\]» \[\033[0m\]'

export PATH="$HOME/bin:$PATH"

# color settings for less command
export LESS_TERMCAP_mb=$'\E[1;31m'     # begin blink
export LESS_TERMCAP_md=$'\E[38;5;162m' # begin bold
export LESS_TERMCAP_me=$'\E[0m'        # reset bold, blink
export LESS_TERMCAP_us=$'\E[38;5;208m' # begin underline
export LESS_TERMCAP_ue=$'\E[0m'        # reset underline
export LESS_TERMCAP_so=$'\E[0;45;30m'  # begin standout (reverse video)
export LESS_TERMCAP_se=$'\E[0m'        # reset standout
